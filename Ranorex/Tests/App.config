<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
    <add key="appWait" value="15000"/>
    <add key="appWaitIsExist" value="15000"/>
    <add key="notepad++.exe" value="C:\Program Files\Notepad++\notepad++.exe"/>
    <add key="saveFilePath" value="C:\Users\Name"/>
    <add key="maxLenghtFileName" value="10"/>
  </appSettings>
  <log4net debug="false">
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <!-- A1 uses PatternLayout -->
      <layout type="log4net.Layout.PatternLayout">
        <!-- Print the date in ISO 8601 format -->
        <conversionPattern value="%date %-5level  - %message%newline" />
      </layout>
    </appender>
    <appender name="fileApp" type="log4net.Appender.FileAppender">
      <param name="File" value="LogFile.txt" />
      <param name="AppendToFile" value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <!-- Print the date in ISO 8601 format -->
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>
    <root>
      <appender-ref ref="Console" />
      "
      <appender-ref ref="fileApp" />"
    </root>
  </log4net>
</configuration>